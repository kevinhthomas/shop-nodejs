<%- include('../includes/intro.ejs') %>

<head>
  <%- include('../includes/headContent.ejs') %>
  <link rel="stylesheet" href="/css/orders.css" />
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if (orders.length <= 0) { %>
    <h1>Nothing here!</h1>
    <% } else { %>
    <ul>
      <% orders.forEach(order => { %>
      <li>
        <h1># <%= order._id %></h1> <a href="/orders/<%= order._id %>">Invoice</a>
        <ul>
          <% order.products.forEach(p => { %>
          <li> <%= p.product.title %> (<%= p.quantity %>) </li>

          <% }); %>
        </ul>
      </li>
      <% }); %>
    </ul>
    <% } %>
  </main>
</body>

<%- include('../includes/end.ejs') %>
